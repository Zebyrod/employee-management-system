<!-- views/employees/index.ejs -->
 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Employees</title>
 </head>
 <body>
    <div class="nav">
        <%- include('../partials/_navbar.ejs') %>
        <a href="/users/<%= user._id%>/employees/new">Add New Employee</a>
    </div>
    <div class="main">
        <h1>Below is all of your current staff:</h1>
        <ul>
            <% employees.forEach((employee)=>{ %>
                <li>
                    <a href="/users/<%= user._id %>/employees/<%= employee._id %>"><%= employee.name %>, <%= employee.position %></a>
                </li>
           <% }) %>
        </ul>
    </div>
 </body>
 </html>