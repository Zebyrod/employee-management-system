<!-- views/employees/new.ejs -->
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/stylesheets/style.css" />
		<title>New Employee</title>
	</head>
	<body>
		<div class="nav" class="flex-container">
			<%- include('../partials/_navbar.ejs') %>
		</div>
		<div class="aside" class="flex-container">
			<h1>Creating New Employee!</h1>
		</div>
		<div class="main" class="flex-container">
			<h1>New Employee Infomation:</h1>
			<form action="/users/<%= user._id %>/employees" method="POST">
				<label for="name">Employee Name:</label>
                <!-- used chatgpt to figure out how to use pattern to restict the accepted inputs from the user -->
				<input type="text" name="name" id="name" pattern="[A-Za-z\s]+" title="No numbers or special characters allowed" required/>
                <!-- In this pattern I am allowing all upper and lowercase letters as well as spaces with the \s while the + is ensuring that at least one valid character is entered -->
				<br />
				<br />
				<label for="position">Job Title:</label>
				<input type="text" name="position" id="position" pattern="[A-Za-z\s]+" title="No numbers or special characters allowed" required/>
				<br />
				<br />
				<label for="salary">Salary:</label>
				<input type="number" name="salary" id="salary" required/>
				<br />
				<br />
				<label for="status">Employment Status:</label>
				<select name="status" id="status">
					<option value="full-time">Full Time</option>
					<option value="part-time">Part Time</option>
					<option value="per-diem">Per Diem</option>
				</select>
				<br />
				<button type="submit">Add Employee</button>
			</form>
		</div>
		
	</body>
</html>
